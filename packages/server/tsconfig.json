{
  "compilerOptions": {
    "module"                  : "commonjs",
    "target"                  : "esnext",
    "noImplicitAny"           : true,
    "sourceMap"               : true,
    "outDir"                  : "lib",
    "declaration"             : true,
    "emitDecoratorMetadata"   : true,
    "experimentalDecorators"  : true,
    "strictNullChecks"        : true,
    "typeRoots"               : ["node_modules/@types"]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": ["../core"]
  }
}
