{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "tasks": [
    {
      "taskName": "install",
      "command": "npm",
      "args": ["install"],
      "isShellCommand": true,
      "showOutput": "always"
    },
    {
      "taskName": "build",
      "command": "tsc",
      "args": ["-p", "."],
      "isShellCommand": true,
      "showOutput": "silent",
      "problemMatcher": "$tsc"
    }
  ]
}